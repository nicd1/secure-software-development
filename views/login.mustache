<html lang="en">

<head>
<title>Log In</title>
    <link rel="stylesheet" type="text/css" href="styles.css">
</head>


<body>
    <div class='body-container'>
        </h1>Log In</h1>

        <div>
            {{#messages.length}}
                {{#messages}}<li>{{.}}</li>{{/messages}}
            {{/messages.length}}
        </div>
    
        <form name='login' action='login' method='POST'>
            <div class='username'><input type='text' name='username' id='user' placeholder='Enter Username' required />
            </div>
            <div class='password'><input type='password' name='password' id='pass' placeholder='Enter password'
                    required />
            </div>
            <div class='loginButton'><input type='submit' value='Login'>
            <button type="button">Sign in with GitHub</button>
            </div>
        </form>
    </div>
</body>

</html>